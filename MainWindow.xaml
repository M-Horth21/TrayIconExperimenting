<Window x:Class="TrayIconExperimenting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrayIconExperimenting"
        mc:Ignorable="d"
        Title="Horthapotamus" Height="400" Width="300"
        ResizeMode="NoResize"
        Background="#121212" WindowStartupLocation="CenterScreen">
  <UniformGrid
    Margin="40"
    Columns="1">
    
    <Button
      Height="60"
      Command="{Binding SetStatusOK}">
      SET STATUS OK
    </Button>
    <Button
      Height="60"
      Command="{Binding SetStatusWarning}">
      SET STATUS WARNING
    </Button>
    <Button
      Height="60"
      Command="{Binding SetStatusError}">
      SET STATUS ERROR
    </Button>
  </UniformGrid>
</Window>
